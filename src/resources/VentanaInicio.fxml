<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="contenedor-principal" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.controlador.Controlador">
    <!-- Contenedor para los bloques de gastos -->
    <HBox styleClass="contenedor-funcionalidades">
        <children>
            <!-- Primer bloque de gasto -->
            <BorderPane styleClass="bloque-gasto" HBox.hgrow="ALWAYS">
                <center>
                    <VBox>
                        <Label styleClass="texto-gasto" text="Número de Gasto del Día" />
                        <Separator />
                        <Label styleClass="texto-total" text="Gasto Total del Día" />
                    </VBox>
                </center>
            </BorderPane>

            <!-- Segundo bloque de gasto -->
            <BorderPane styleClass="bloque-gasto" HBox.hgrow="ALWAYS">
                <center>
                    <VBox>
                        <Label styleClass="texto-gasto" text="Número de Gasto del Mes" />
                        <Separator />
                        <Label styleClass="texto-total" text="Gasto Total del Mes" />
                    </VBox>
                </center>
            </BorderPane>

            <!-- Tercer bloque de gasto -->
            <BorderPane styleClass="bloque-gasto" HBox.hgrow="ALWAYS">
                <center>
                    <VBox>
                        <Label styleClass="texto-gasto" text="Número de Gasto del Año" />
                        <Separator />
                        <Label styleClass="texto-total" text="Gasto Total del Año" />
                    </VBox>
                </center>
            </BorderPane>
        </children>
    </HBox>

    <!-- Contenedor para el formulario de agregar gasto -->
    <VBox fx:id="formularioAgregarGasto" style="-fx-spacing: 10px; -fx-padding: 10px; -fx-border-color: black; -fx-border-width: 1px;" visible="false">
        <Label text="Agregar Nuevo Gasto" style="-fx-font-weight: bold;"/>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>
            <Label text="Cantidad:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="cantidadTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="descripcionTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Categoría:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="categoriaTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label text="Día:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="diaTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="Mes:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="mesTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Label text="Año:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="añoTextField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        </GridPane>
        <Button text="Agregar Gasto" onAction="#guardarGasto"/>
        <Button text="Salir" onAction="#salirDelFormulario"/>
    </VBox>

    <!-- Contenedor para los botones de acciones -->
    <VBox styleClass="contenedor-botones-funcionalidades">
        <children>
            <Button mnemonicParsing="false" styleClass="boton-agregar-gasto" text="Agregar" onAction="#mostrarFormularioAgregarGasto" />
            <Button mnemonicParsing="false" styleClass="boton-eliminar-gasto" text="Eliminar" onAction="#eliminarGasto" />
            <!-- Podemos agregar un botón para buscar gasto -->

            <!-- <Button mnemonicParsing="false" styleClass="boton-buscar-gasto" text="Buscar" />-->
            <Button fx:id="historialButton" mnemonicParsing="false" styleClass="boton-historial" text="Historial" onAction="#cargarHistorial" />


        </children>
    </VBox>
</VBox>






